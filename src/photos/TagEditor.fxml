<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>

<AnchorPane prefHeight="350.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.TagEditorController">
    <children>

        <!-- Table of current tags -->
        <Label layoutX="84.0" layoutY="14.0" prefHeight="29.0" prefWidth="147.0"
               style="-fx-font-family:Roboto; -fx-font-size:24.0" text="Current Tags"/>
        <TableView layoutX="28.0" layoutY="61.0" prefHeight="205.0" prefWidth="258.0">
            <columns>
                <TableColumn prefWidth="125.0" text="Name"/>
                <TableColumn prefWidth="132.0" text="Value"/>
            </columns>
        </TableView>

        <!-- Delete button -->
        <Button fx:id="delete_button" layoutX="29.0" layoutY="276.0" mnemonicParsing="false" prefHeight="39.0"
                prefWidth="258.0" style="-fx-font-family:Roboto; -fx-font-size:14.0" text="delete"/>

        <!-- Create new tags -->
        <Label layoutX="394.0" layoutY="14.0" prefHeight="29.0" prefWidth="99.0"
               style="-fx-font-family:Roboto; -fx-font-size:24.0" text="New Tag"/>
        <Label layoutX="314.0" layoutY="65.0" prefHeight="29.0" prefWidth="186.0"
               style="-fx-font-family:Roboto; -fx-font-size:18.0" text="Name"/>
        <TextField fx:id="new_tag_name" layoutX="314.0" layoutY="94.0" prefHeight="29.0" prefWidth="258.0"/>
        <Label layoutX="314.0" layoutY="132.0" prefHeight="29.0" prefWidth="180.0"
               style="-fx-font-family:Roboto; -fx-font-size:18.0" text="Value"/>
        <PasswordField fx:id="new_tag_value" layoutX="314.0" layoutY="161.0" prefHeight="29.0" prefWidth="258.0"/>
        <Button fx:id="add_tag" layoutX="314.0" layoutY="212.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="258.0"
                style="-fx-font-family:Roboto; -fx-font-size:14.0" text="add"/>

        <!-- Logout -->
        <Button fx:id="logout" layoutX="314.0" layoutY="276.0" mnemonicParsing="false" prefHeight="39.0"
                prefWidth="258.0" style="-fx-font-family:Roboto; -fx-font-size:14.0" text="return"/>

        <!-- Misc. -->
        <Line endX="100.0" layoutX="443.0" layoutY="266.0" startX="-100.0"/>
    </children>
</AnchorPane>
